<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weightwatchers.pointmyplate.ui.ActivityFragment"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/myplatesPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/plates_bg">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:src="@drawable/plates"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon1"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:text="My Plates"
            android:layout_marginLeft="20dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/myplatesCountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="27"
            android:layout_marginRight="30dp"
            android:textSize="24sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myreviewsPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/review_bg">

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:src="@drawable/review"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon2"
            android:text="My Reviews"
            android:layout_marginLeft="30dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/myreviewsCountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="15"
            android:layout_marginRight="30dp"
            android:textSize="24sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notificationsPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/notification_bg">

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:src="@drawable/notification"/>

        <TextView
            android:layout_toRightOf="@id/icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:text="Notifications"
            android:layout_marginLeft="20dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/notificationsCountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="3"
            android:layout_marginRight="20dp"
            android:textSize="24sp" />


    </RelativeLayout>


</LinearLayout>
